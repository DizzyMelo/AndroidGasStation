<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondFragment">


    <TextView
        android:id="@+id/textview_gas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/gas_initial_value"
        android:textSize="25dp"
        android:fontFamily="@font/orbitron_bold"
        app:layout_constraintBottom_toTopOf="@id/textview_gallons"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textview_gallons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/gallons_initial_value"
        android:textSize="20dp"
        android:fontFamily="@font/orbitron_regular"
        app:layout_constraintBottom_toTopOf="@id/button_second"
        app:layout_constraintEnd_toEndOf="@id/textview_price"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textview_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/price_initial_value"
        android:textSize="20dp"
        android:fontFamily="@font/orbitron_regular"
        app:layout_constraintBottom_toTopOf="@id/button_second"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/textview_gallons"
        app:layout_constraintTop_toTopOf="parent"
        />

    <Button
        android:id="@+id/button_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/previous"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textview_price" />
</android.support.constraint.ConstraintLayout>